<div id="new_comment" class="mt-8 border-t pt-6">
  <h2 class="text-lg font-semibold text-gray-700 mb-3">コメントを投稿する</h2>

  <%= form_with model: [@diary_entry, comment], class: "space-y-4" do |form| %>
    <% if comment.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 p-3 rounded mb-4">
        <ul>
          <% comment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div>
      <%= form.label :content, "コメント内容", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :content,
                         rows: 4,
                         placeholder: "感想やメモを書いてみましょう…",
                         class: "w-full border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-blue-400 focus:outline-none bg-gray-50" %>
    </div>

    <div class="flex justify-end">
      <%= form.submit "投稿する",
                      class: "bg-blue-500 text-white font-semibold px-5 py-2 rounded hover:bg-blue-600 transition-colors" %>
    </div>
  <% end %>
</div>
